<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BlackText">
        <item name="android:textColor">#000</item>
    </style>

    <style name="MainTitleText" parent="BlackText">
        <item name="android:textSize">44sp</item>
    </style>

    <style name="MusicTitleText" parent="BlackText">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MusicLyricText">
        <item name="android:color">#1f1f1f</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="YaoQianText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DrawerUser">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="CalendarText">
        <item name="android:textColor">@color/colorCalendar</item>
    </style>

    <style name="CalendarSuggestText" parent="CalendarText">
        <item name="android:textSize">23sp</item>
    </style>

    <style name="CalendarDateText" parent="CalendarText">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CalendarRoundTextSize">
        <item name="android:background">@drawable/round_backgourd</item>
        <item name="android:textSize">26sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditMiaobiEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#d6d6d6</item>
        <item name="colorControlActivated">#d6d6d6</item>
    </style>

    <style name="PeopleText">
        <item name="android:textSize">27sp</item>
    </style>

    <style name="MiaobiTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MiaobiDetail">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#939292</item>
    </style>

    <style name="ZanItem">
        <item name="android:background">#c8c8c8c8</item>
    </style>

</resources>
