<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#000" />
            <corners android:radius="5dp"/>
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress" android:top="4dp" android:bottom="4dp">
        <clip>
            <shape>
                <solid android:color="#000" />
                <corners android:radius="5dp"/>
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress" android:top="4dp" android:bottom="4dp">
        <clip>
            <shape>
                <solid android:color="#000" />
                <corners android:radius="5dp"/>
            </shape>
        </clip>
    </item>
</layer-list>