<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="io.github.daddytrap.adream.activity.EditMiaobiActivity">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_edit_miaobi_title_edittext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/edit_miaobi_align_left"
            android:layout_marginRight="@dimen/edit_miaobi_align_right"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_miaobi_toolbar"
            android:textColorHint="#d6d6d6"
            android:textColor="#000"
            android:textSize="22sp"
            android:hint="标题"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/activity_edit_miaobi_content_edittext"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_miaobi_title_edittext"
            android:inputType="textMultiLine"
            android:gravity="top|left"
            android:layout_marginLeft="@dimen/edit_miaobi_align_left"
            android:layout_marginRight="@dimen/edit_miaobi_align_right"
            android:lines="8"
            android:scrollbars="vertical"
            android:textSize="18dp"
            android:textColorHint="#d6d6d6"
            style="@style/EditMiaobiEditText"
            android:textColor="#222222"
            android:hint="正文..."/>

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/activity_edit_miaobi_addphoto"
            app:layout_constraintTop_toBottomOf="@+id/activity_edit_miaobi_content_edittext"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:background="@drawable/rect_border"
            android:src="@drawable/ic_add"
            style="@style/EditMiaobiEditText"
            android:padding="10dp"/>

        <android.support.v7.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/activity_edit_miaobi_toolbar"
            android:background="#00FFFFFF">
            <ImageView
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:id="@+id/activity_edit_miaobi_back_icon"
                android:src="@drawable/ic_keyboard_arrow_left"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity_edit_miaobi_toolbar_title"
                android:layout_gravity="center"
                android:text="吾·妙笔"
                android:textColor="#000"
                android:textSize="32sp"/>
            <ImageView
                android:layout_width="@dimen/toolbar_icon_size"
                android:layout_height="@dimen/toolbar_icon_size"
                android:id="@+id/activity_edit_miaobi_fa_icon"
                android:src="@mipmap/miaobi_fa_icon"
                android:layout_gravity="right"
                android:layout_marginRight="12dp"/>
        </android.support.v7.widget.Toolbar>
    </android.support.constraint.ConstraintLayout>
</ScrollView>

